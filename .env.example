# Discord Bot Configuration (Required)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_client_id_here
ADMIN_GUILD_ID=your_development_server_id_here # Required for development environment
DISCORD_OWNER_ID=your_discord_user_id_here # Optional: Bot owner's Discord ID

# Discord Bot Presence Settings
DISCORD_INVITE_URL=YOUR_DISCORD_INVITE_URL_HERE # Optional: Invite URL for the bot
BOT_STATUS=online # Options: online, idle, dnd, invisible
BOT_ACTIVITY_TYPE=PLAYING # Options: PLAYING, STREAMING, LISTENING, WATCHING, COMPETING
BOT_ACTIVITY_NAME=with VSCode # The activity name displayed in the bot's status

# Logging Configuration
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly
LOG_DIRECTORY=logs
LOG_TO_CONSOLE=true # Options: true, false
LOG_TO_FILE=true # Options: true, false

# Database Configuration
DATABASE_ENABLED=true # Options: true, false
DATABASE_TYPE=json # Options: json, mysql

# JSON Database Settings
JSON_DB_PATH=./data # Path for JSON database files

# MySQL/MariaDB Database Settings
MYSQL_HOST=localhost # MySQL server hostname
MYSQL_PORT=3306 # MySQL server port
MYSQL_USER=root # MySQL username
MYSQL_PASSWORD=your_mysql_password_here # MySQL password
MYSQL_DATABASE=discord_bot # MySQL database name
MYSQL_CONNECTION_LIMIT=10 # Maximum number of connections in pool

# API Configuration (Future implementation)
API_ENABLED=false # Options: true, false

# Application-specific Settings
COOLDOWN_DEFAULT=3 # Default cooldown between commands in seconds

# Note: Create the following environment-specific files as needed:
# - .env.development for development environment
# - .env.production for production environment
# - .env.test for testing environment